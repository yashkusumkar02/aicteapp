<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    tools:context=".About_us">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="7dp"
        android:elevation="8dp">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:drawableLeft="@drawable/ic_back"
            android:background="#0000"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/home_page"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fontFamily="@font/bg_black"
            android:text="About Us"
            android:textColor="#8B8B8B"
            android:textSize="2sp" />

        <Button
            android:id="@+id/home_btn_press"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:drawableRight="@drawable/ic_home"
            android:background="#0000"
            android:paddingRight="15dp"/>



    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/card_view_abtus"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_margin="30dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/history_image"
                android:background="@drawable/abt_us"/>

        </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu"
                    android:text="The beginning of formal technical education in India can be dated back to the mid-19th century. Major policy initiatives in the pre-independence period included the appointment of the Indian Universities Commission in 1902, issue of the Indian Education Policy Resolution in 1904, and the Governor General’s policy statement of 1913 stressing the importance of technical education, the establishment of IISc in Bangalore, Institute for Sugar, Textile &amp; Leather Technology in Kanpur, N.C.E. in Bengal in 1905, and industrial schools in several provinces."
                    android:textColor="#6B6B6B"
                    android:textSize="16sp" />


            </LinearLayout>


        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:fontFamily="@font/bg_bold_italic"
                android:text="Initial Set-up"
                android:textColor="#005aaa"
                android:layout_margin="20dp"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:fontFamily="@font/ubuntu"
                android:text="All India Council for Technical Education (AICTE) was set up in November 1945 as a national-level apex advisory body to conduct a survey on the facilities available for technical education and to promote development in the country in a coordinated and integrated manner. And to ensure the same, as stipulated in the National Policy of Education (1986), AICTE was vested with:"
                android:textColor="#6B6B6B"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:fontFamily="@font/ubuntu"
                android:text="• Statutory authority for planning, formulation, and maintenance of norms &amp; standards
\n• Quality assurance through accreditation
\n• Funding in priority areas, monitoring, and evaluation
\n• Maintaining parity of certification &amp; awards
\n• The management of technical education in the country"
                android:textColor="#6B6B6B" />
            
            
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="330dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/imge_view_about_history"
                android:layout_width="300dp"
                android:layout_height="330dp"
                android:layout_gravity="center"
                android:src="@drawable/about_history"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Role of National Working Group"
            android:textColor="#005aaa"
            android:textSize="18sp"
            android:gravity="center"
            android:fontFamily="@font/andika_new_basic_bold"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/food_back">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/bg_black"
                    android:text="Copyright © 2017. AICTE \nNelson Mandela Marg, Vasant Kunj,\nNew Delhi -110070"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="140dp"
                    android:src="@drawable/facebook" />

                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="100dp"
                    android:src="@drawable/twitter"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </ScrollView>

</LinearLayout>